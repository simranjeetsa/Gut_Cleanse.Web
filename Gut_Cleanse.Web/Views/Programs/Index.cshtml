            <div class="row">
                <div class="col-12 mb-4">
                    <h2 class="item-title text-center">Our Programs</h2>
                </div>

                @foreach (var program in Model.Where(x => x.Id != 4))
                {
                    <div class="col-md-4">
                        <div class="pro-card p-4">
                            <div class="event-title mb-2">
