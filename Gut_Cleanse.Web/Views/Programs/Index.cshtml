                                </div>
                                <div class="col-md-6">
                                    <p class="price-money">₹ @program.Amount.ToString("#,0")</p>
                                </div>
                            </div>

                            <hr>
                            <div>

                                <div style="padding-top:8px;">
                                    @if (program.Id == 1)
                                    {
                                        <span><b>3 Months</b></span>
                                    }
                                    else
                                    {
                                        if (program.StartDate !=null){
                                            <span><b>@program.StartDate?.ToString("MMM d, yyyy")</b></span>
                                        }
                                        else{
                                            <span>&nbsp;</span>
                                        }
                                    }
                                    @if(program.Id==1){
                                        <a class="btn-process theme-btn" href="/programs/one-one-gut-reset-revolution">Learn more...</a>
                                        
                                    }
                                    else if (program.Id == 2)
