                                    }
                                    else
                                    {
                                        <a class="btn-process theme-btn" href="/payment/Index?id=@program.Id">Learn more...</a>
                                    }
                                   
                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
